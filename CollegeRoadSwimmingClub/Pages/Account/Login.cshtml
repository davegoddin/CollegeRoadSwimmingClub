@page
@model CollegeRoadSwimmingClub.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Credentials.Username" class="control-label"></label>
                <input type="text" asp-for="Credentials.Username" class="form-control"/>
                <span asp-validation-for="Credentials.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credentials.Password" class="control-label"></label>
                <input type="password" asp-for="Credentials.Password" class="form-control"/>
                <span asp-validation-for="Credentials.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>