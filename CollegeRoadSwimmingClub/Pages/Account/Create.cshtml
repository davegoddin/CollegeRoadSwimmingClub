@page
@using CollegeRoadSwimmingClub.Models
@model CollegeRoadSwimmingClub.Pages.Account.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Account</h1>
<hr />
<p>Please complete this page with your own details. If you are signing up as a parent member, you will have the opportunity to add child members to your account later in the process.</p>
<div class="row">
    <div class="col-md-4">
        <h4>User</h4>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.Username" class="control-label"></label>
                <input asp-for="User.Username" class="form-control" />
                <span asp-validation-for="User.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Password" class="control-label"></label>
                <input asp-for="User.Password" class="form-control" type ="password"/>
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <h4> Personal Details</h4>
            <hr/>
            <div class="form-group">
                <label asp-for="Member.FirstName" class="control-label"></label>
                <input asp-for="Member.FirstName" class="form-control" />
                <span asp-validation-for="Member.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.LastName" class="control-label"></label>
                <input asp-for="Member.LastName" class="form-control" />
                <span asp-validation-for="Member.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.DateOfBirth" class="control-label"></label>
                <input asp-for="Member.DateOfBirth" class="form-control" />
                <span asp-validation-for="Member.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Gender" class="control-label"></label>
                <select asp-for="Member.Gender" asp-items="Html.GetEnumSelectList<GenderSelect>()" class="form-control"></select>
                <span asp-validation-for="Member.Gender" class="text-danger"></span>
            </div>
            <h5>Address</h5>
            <div class="form-group">
                <label asp-for="Member.Address1" class="control-label"></label>
                <input asp-for="Member.Address1" class="form-control" />
                <span asp-validation-for="Member.Address1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Address2" class="control-label"></label>
                <input asp-for="Member.Address2" class="form-control" />
                <span asp-validation-for="Member.Address2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Town" class="control-label"></label>
                <input asp-for="Member.Town" class="form-control" />
                <span asp-validation-for="Member.Town" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.County" class="control-label"></label>
                <input asp-for="Member.County" class="form-control" />
                <span asp-validation-for="Member.County" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Postcode" class="control-label"></label>
                <input asp-for="Member.Postcode" class="form-control" />
                <span asp-validation-for="Member.Postcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Email" class="control-label"></label>
                <input asp-for="Member.Email" class="form-control" />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Telephone" class="control-label"></label>
                <input asp-for="Member.Telephone" class="form-control" />
                <span asp-validation-for="Member.Telephone" class="text-danger"></span>
            </div>
            <h4>Membership</h4>
            <hr />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Member.IsSwimmer" /> @Html.DisplayNameFor(model => model.Member.IsSwimmer)
                </label>
                <p><i>Leave unchecked if you will not be swimming competitively as a member of the club.</i></p>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
