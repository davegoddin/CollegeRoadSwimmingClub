@page
@model CollegeRoadSwimmingClub.Pages.Galas.Races.Results.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>RaceResult</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="RaceResult.RaceId" type="hidden" />
            <div class="form-group">
                <label asp-for="RaceResult.Race" class="control-label"></label>
                <select asp-for="RaceResult.RaceId" class ="form-control" asp-items="ViewBag.RaceId" disabled></select>
            </div>
            <div class="form-group">
                <label asp-for="RaceResult.Swimmer" class="control-label"></label>
                <select asp-for="RaceResult.SwimmerId" class ="form-control" asp-items="ViewBag.SwimmerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RaceResult.Time" class="control-label"></label>
                <input asp-for="RaceResult.Time" class="form-control" asp-format="{0:h\:mm\:ss\.ff}" />
                <span asp-validation-for="RaceResult.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RaceResult.Position" class="control-label"></label>
                <input asp-for="RaceResult.Position" class="form-control" />
                <span asp-validation-for="RaceResult.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Details" asp-route-id="@Model.RaceResult.RaceId">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
