@page
@model CollegeRoadSwimmingClub.Pages.Galas.Races.Results.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RaceResult</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RaceResult.Id" />
            <div class="form-group">
                <label asp-for="RaceResult.RaceId" class="control-label"></label>
                <select asp-for="RaceResult.RaceId" class="form-control" asp-items="ViewBag.RaceId"></select>
                <span asp-validation-for="RaceResult.RaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RaceResult.SwimmerId" class="control-label"></label>
                <select asp-for="RaceResult.SwimmerId" class="form-control" asp-items="ViewBag.SwimmerId"></select>
                <span asp-validation-for="RaceResult.SwimmerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RaceResult.Time" class="control-label"></label>
                <input asp-for="RaceResult.Time" class="form-control" />
                <span asp-validation-for="RaceResult.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RaceResult.Position" class="control-label"></label>
                <input asp-for="RaceResult.Position" class="form-control" />
                <span asp-validation-for="RaceResult.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
