@page
@model CollegeRoadSwimmingClub.Pages.Galas.Races.Entrants.AddModel
@{
    ViewData["Title"] = "Add entrant";
}

<h1>Add</h1>

<h4>Entrant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Race.Id" />
            <div class="form-group">
                <label asp-for="Entrant.Id" class="control-label"></label>
                <select asp-for="Entrant.Id" class="form-control" asp-items="ViewBag.EntrantId"></select>
                <span asp-validation-for="Entrant.Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Details" asp-route-id="@Model.Race.Id">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
