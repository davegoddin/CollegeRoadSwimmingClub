@page
@model CollegeRoadSwimmingClub.Pages.Swimmers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Swimmer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Age)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
<div class="col-6">
    <h4>Results</h4>
    <form method="get">
        <div class="row row-cols-lg-auto g-3 mb-3">
            <div class="col-12">
                <select name="eventId" asp-items = "@ViewBag.Events" class="form-control" asp-for="EventId"></select>
                <input type="hidden" name="id" value="@Model.Member.Id" />
            </div>
            <div class="col-12">
                <input type="submit" value="Select event" class="btn-primary btn"/>
            </div>
        </div>    
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Event
            </th>
            <th>
                Time
            </th>
            <th>
                Position
            </th>
            <th>
                In competition?
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Results) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Competition)
            </td>
        </tr>
}
    </tbody>
</table>



