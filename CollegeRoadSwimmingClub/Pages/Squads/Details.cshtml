@page
@using CollegeRoadSwimmingClub.Models
@model CollegeRoadSwimmingClub.Pages.Squads.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Squad.Name)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Number of Swimmers
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Squad.NumberOfSwimmers)
        </dd>
        <dt class="col-sm-2">
            Coaches
        </dt>
        <dd class="col-sm-10">
            @ViewData["CoachList"]
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Squad.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
<div>
    <p>
        <a asp-page="./Members/Add" asp-route-squadId="@Model.Squad.Id">Add squad member</a>
    </p>
    <h4>Swimmers</h4>
    <hr/>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Age
                </th>
                <th>
                    Gender
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Squad.Swimmers) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
