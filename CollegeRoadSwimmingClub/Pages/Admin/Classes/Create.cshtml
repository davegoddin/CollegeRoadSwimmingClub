@page
@using CollegeRoadSwimmingClub.Models
@model CollegeRoadSwimmingClub.Pages.Admin.Classes.CreateModel
@{
    ViewData["Title"] = "Create class";
}

<h1>Create</h1>

<h4>Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Class.Name" class="control-label"></label>
                <input asp-for="Class.Name" class="form-control" />
                <span asp-validation-for="Class.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class.MinAge" class="control-label"></label>
                <input asp-for="Class.MinAge" class="form-control" />                
                <input asp-for="MinAgeNull" type="checkbox" />
                <label asp-for="MinAgeNull" class="control-label">No min age</label><br/>
                <span asp-validation-for="Class.MinAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class.MaxAge" class="control-label"></label>
                <input asp-for="Class.MaxAge" class="form-control" />
                <input asp-for="MaxAgeNull" type="checkbox" />
                <label asp-for="MaxAgeNull" class="control-label">No max age</label><br/>
                <span asp-validation-for="Class.MaxAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class.Gender" class="control-label"></label>
                <select asp-for="Class.Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                <span asp-validation-for="Class.Gender" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}